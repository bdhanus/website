             19. choice = input("Enter choice(1/2/3/4): ")<br>
             20. if choice in ('1', '2', '3', '4'):<br>
            21. try:<br>
            22. num1 = float(input("Enter first number: "))<br>
            23. num2 = float(input("Enter second number: "))<br>
            24. except ValueError:<br>
            25. print("Invalid input. Please enter a number.")<br>
            26. continue<br>

            27. if choice == '1':<br>
            28. print(num1, "+", num2, "=", add(num1, num2))<br>

            29. elif  choice == '2':<br>
            30. print(num1, "-", num2, "=", subtract(num1, num2))<br>

            31. elif choice == '3':<br>
            32. print(num1, "*", num2, "=", multiply(num1, num2))<br>

            33. elif  choice == '4':<br>
            34. print(num1, "/", num2, "=", divide(num1, num2))<br>
