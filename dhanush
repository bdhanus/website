        <center>
            <h2>rock, paper game</h2><br>
            1. import random<br>
            2. options = ["Rock", "Paper", "Scissors"]<br>
            3. user_choice = input("Choose Rock, Paper, or Scissors: ")<br>
            4. computer_choice = random.choice(options)<br>

            5. print("You chose: ", user_choice)<br>
            6. print("Computer chose: ", computer_choice)<br>

             7. if user_choice == computer_choice:<br>
             8. print("tie")<br>

             9. elif user_choice == "Rock" and computer_choice == "Scissors":<br>
             10. print("You win!")<br>

             11. elif user_choice == "Paper" and computer_choice == "Rock":<br>
             12. print("You win!")<br>

             13. elif user_choice == "Scissors" and computer_choice == "Paper":<br>
             14. print("You win!")<br>


